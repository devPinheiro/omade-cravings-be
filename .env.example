# üç∞ Omade Cravings Bakery Platform - Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/omade_cravings
# Test database (optional - uses DATABASE_URL if not set)
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/omade_cravings_test

# Redis Configuration (for Cart and Session Management)
REDIS_URL=redis://localhost:6379

# JWT/Authentication Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-refresh-secret-here
JWT_REFRESH_EXPIRES_IN=7d

# Encryption/Security
BCRYPT_SALT_ROUNDS=12

# Payment Gateway Configuration
# PayPal
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox  # or 'live' for production

# Stripe
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Email Service Configuration (for notifications)
EMAIL_SERVICE=smtp  # or 'sendgrid', 'mailgun', etc.
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@omadecravings.com

# SMS Service Configuration (for notifications)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# File Storage Configuration
# AWS S3 (for product images, custom cake images)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=omade-cravings-images
AWS_S3_REGION=us-east-1

# Cloudinary (alternative to S3)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Google Maps API (for delivery tracking)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Push Notifications
FCM_SERVER_KEY=your-firebase-server-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=info  # debug, info, warn, error

# Social OAuth Configuration
GOOGLE_OAUTH_CLIENT_ID=your-google-client-id
GOOGLE_OAUTH_CLIENT_SECRET=your-google-client-secret

APPLE_OAUTH_CLIENT_ID=your-apple-client-id
APPLE_OAUTH_CLIENT_SECRET=your-apple-client-secret

FACEBOOK_OAUTH_CLIENT_ID=your-facebook-client-id
FACEBOOK_OAUTH_CLIENT_SECRET=your-facebook-client-secret

# Business Configuration
BUSINESS_NAME="Omade Cravings Bakery"
BUSINESS_ADDRESS="123 Main St, City, State 12345"
BUSINESS_PHONE="+1234567890"
BUSINESS_EMAIL="contact@omadecravings.com"

# Delivery Configuration
DEFAULT_DELIVERY_FEE=5.99
FREE_DELIVERY_MINIMUM=50.00
MAX_DELIVERY_DISTANCE_KM=25

# Loyalty Points Configuration
POINTS_PER_DOLLAR=1
POINTS_REDEMPTION_RATE=100  # 100 points = $1

# Custom Cake Configuration
MAX_CAKE_IMAGE_SIZE_MB=10
ALLOWED_CAKE_FORMATS=jpg,jpeg,png,webp