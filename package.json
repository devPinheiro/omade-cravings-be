{
  "name": "omade-cravings-api",
  "version": "1.0.0",
  "description": "Omade Cravings API - Food delivery and restaurant management platform",
  "main": "index.js",
  "scripts": {
    "dev": "NODE_ENV=development nodemon src/server.ts",
    "build": "tsc && tsc-alias",
    "start": "npm run db:migrate && node dist/server.js",
    "lint": "eslint .",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "test:ci": "NODE_ENV=test jest --ci --coverage --watchAll=false",
    "prepare": "husky",
    "docs:validate": "node scripts/validate-swagger.js",
    "docs:generate": "npm run build && npm run docs:validate",
    "db:migrate": "sequelize-cli db:migrate",
    "db:migrate:undo": "sequelize-cli db:migrate:undo",
    "db:migrate:undo:all": "sequelize-cli db:migrate:undo:all",
    "db:migrate:status": "sequelize-cli db:migrate:status",
    "db:seed": "sequelize-cli db:seed:all",
    "db:seed:undo": "sequelize-cli db:seed:undo:all",
    "db:seed:all": "sequelize-cli db:seed:all",
    "db:test": "node -e \"require('./src/config/sequelize.config.js')\" && echo 'Database connection successful'",
    "redis:test": "node -e \"const redis = require('./src/config/redis'); redis.connectRedis().then(() => { console.log('Redis connection successful'); process.exit(0); }).catch(() => process.exit(1));\"",
    "migrate": "npm run db:migrate",
    "migrate:status": "npm run db:migrate:status",
    "migrate:undo": "npm run db:migrate:undo",
    "seed": "npm run db:seed:all",
    "seed:undo": "npm run db:seed:undo",
    "railway:migrate": "npm run build && npm run db:migrate",
    "railway:deploy": "npm run build && npm run db:migrate && npm start"
  },
  "keywords": [
    "food-delivery",
    "restaurant-management",
    "api",
    "nodejs",
    "typescript",
    "express"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/nodemailer": "^7.0.4",
    "@types/redis": "^4.0.10",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "axios": "^1.13.2",
    "bcrypt": "^6.0.0",
    "cloudinary": "^2.8.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.11",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "rate-limit-redis": "^4.3.1",
    "redis": "^5.10.0",
    "reflect-metadata": "^0.2.2",
    "sequelize": "^6.37.7",
    "sequelize-typescript": "^2.1.6",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1",
    "yup": "^1.7.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/express-rate-limit": "^5.1.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@types/pg": "^8.15.6",
    "@types/sequelize": "^6.12.0",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@types/validator": "^13.15.10",
    "@types/yup": "^0.29.14",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "prettier": "^3.6.2",
    "sequelize-cli": "^6.6.3",
    "sqlite3": "^5.1.7",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  }
}
